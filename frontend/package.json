{
	"name": "sidebar-frontend",
	"version": "1.0.0",
	"description": "sideBar Frontend - SvelteKit UI",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && vite build",
		"build:codemirror": "vite build --config vite.codemirror.config.ts",
		"preview": "vite preview",
		"test": "vitest run",
		"test:watch": "vitest",
		"coverage": "svelte-kit sync && vitest run --coverage",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint 'src/**/*.{ts,js,svelte}'",
		"lint:fix": "eslint 'src/**/*.{ts,js,svelte}' --fix",
		"format": "prettier --write 'src/**/*.{ts,js,svelte,json}'",
		"format:check": "prettier --check 'src/**/*.{ts,js,svelte,json}'",
		"docs": "typedoc",
		"docs:jsdoc": "node scripts/check-jsdoc-coverage.js"
	},
	"devDependencies": {
		"@internationalized/date": "^3.10.1",
		"@lucide/svelte": "^0.561.0",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/adapter-vercel": "^5.10.0",
		"@sveltejs/kit": "^2.49.2",
		"@tailwindcss/postcss": "^4.0.0",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/svelte": "^5.2.8",
		"@testing-library/user-event": "^14.6.1",
		"@typescript-eslint/eslint-plugin": "^8.50.1",
		"@typescript-eslint/parser": "^8.50.1",
		"@vitest/coverage-v8": "^3.2.4",
		"autoprefixer": "^10.4.23",
		"bits-ui": "^2.14.4",
		"clsx": "^2.1.1",
		"eslint": "^9.39.2",
		"eslint-plugin-jsdoc": "^61.5.0",
		"eslint-plugin-svelte": "^2.46.1",
		"jsdom": "^25.0.1",
		"postcss": "^8.5.6",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.2.8",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.5",
		"svelte-eslint-parser": "^1.4.1",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0",
		"typedoc": "^0.28.15",
		"vite": "^7.3.0",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@codemirror/commands": "^6.10.1",
		"@codemirror/lang-css": "^6.3.1",
		"@codemirror/lang-html": "^6.4.11",
		"@codemirror/lang-javascript": "^6.2.4",
		"@codemirror/lang-json": "^6.0.2",
		"@codemirror/lang-markdown": "^6.3.2",
		"@codemirror/lang-python": "^6.2.1",
		"@codemirror/lang-sql": "^6.10.0",
		"@codemirror/lang-xml": "^6.1.0",
		"@codemirror/lang-yaml": "^6.1.2",
		"@codemirror/language": "^6.11.3",
		"@codemirror/state": "^6.5.2",
		"@codemirror/view": "^6.38.1",
		"@lezer/highlight": "^1.2.3",
		"@sentry/sveltekit": "^10.32.1",
		"@supabase/ssr": "^0.1.0",
		"@supabase/supabase-js": "^2.39.0",
		"@sveltejs/adapter-vercel": "^6.2.0",
		"@tiptap/core": "^3.14.0",
		"@tiptap/extension-image": "^3.14.0",
		"@tiptap/extension-link": "^3.15.3",
		"@tiptap/extension-list": "^3.14.0",
		"@tiptap/extension-table": "^3.14.0",
		"@tiptap/extension-youtube": "^3.14.0",
		"@tiptap/pm": "^3.14.0",
		"@tiptap/starter-kit": "^3.14.0",
		"lucide-svelte": "^0.562.0",
		"pdfjs-dist": "^5.4.530",
		"svelte-sonner": "^1.0.7",
		"tiptap-markdown": "^0.9.0",
		"web-vitals": "^5.1.0"
	}
}
