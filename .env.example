# Frontend Maintenance Mode
# Set to "true" to display holding page instead of the app
MAINTENANCE_MODE=false

# Environment (local, dev, production)
APP_ENV=local

# Doppler API Token
# Get your token from: https://dashboard.doppler.com/
DOPPLER_TOKEN=your_doppler_token_here

# Supabase connection (builds DATABASE_URL at runtime)
SUPABASE_PROJECT_ID=your_supabase_project_id
SUPABASE_POSTGRES_PSWD=your_supabase_postgres_password
SUPABASE_USE_POOLER=true
SUPABASE_POOLER_HOST=db.[your_supabase_project_id].supabase.co
SUPABASE_POOLER_USER=postgres
SUPABASE_DB_NAME=postgres
SUPABASE_DB_PORT=6543
SUPABASE_SSLMODE=require
DB_STATEMENT_TIMEOUT_MS=8000
DB_SLOW_QUERY_MS=2000

# SSL configuration (only disable in local/dev)
DISABLE_SSL_VERIFY=false
# CUSTOM_CA_BUNDLE=/path/to/custom-ca.pem

# Supabase Auth (JWT validation)
SUPABASE_URL=https://<project_id>.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
AUTH_DEV_MODE=false
DEFAULT_USER_ID=81326b53-b7eb-42e2-b645-0c03cb5d5dd4

# Web save (jina | local | compare)
WEB_SAVE_MODE=local

# YouTube transription settings
YT_DLP_JS_RUNTIMES=node
YT_DLP_PLAYER_CLIENTS=tv,ios

# APNs push (backend)
APNS_ENV=dev
APNS_TOPIC=ai.sidebar.sidebar
APNS_TOPIC_IOS=
APNS_TOPIC_MACOS=

# Optional yt-dlp client override (default: tv,ios for audio jobs; tv,ios,web for video jobs)
# YT_DLP_PLAYER_CLIENTS=tv,ios

# Skill execution
SKILL_TIMEOUT_SECONDS=60

# R2 storage (non-secret config)
STORAGE_BACKEND=r2
R2_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com/
R2_BUCKET=your_r2_bucket
R2_FAVICON_BUCKET=your_favicon_bucket
R2_FAVICON_PUBLIC_BASE_URL=https://favicons.yourdomain.com

# Direct connection for Alembic migrations (set in shell, not Doppler)
# DATABASE_URL_DIRECT=postgresql://postgres:your_supabase_postgres_password@db.<project_ref>.supabase.co:5432/postgres?sslmode=require

# Frontend monitoring (optional)
PUBLIC_SENTRY_DSN_FRONTEND=
PUBLIC_SENTRY_ENVIRONMENT=production
PUBLIC_SENTRY_SAMPLE_RATE=0.1
PUBLIC_ENABLE_WEB_VITALS=false
PUBLIC_WEB_VITALS_SAMPLE_RATE=0.1
PUBLIC_METRICS_ENDPOINT=/api/metrics/web-vitals
PUBLIC_CHAT_METRICS_ENDPOINT=/api/metrics/chat
PUBLIC_CHAT_METRICS_SAMPLE_RATE=1
