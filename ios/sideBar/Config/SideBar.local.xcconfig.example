// Local-only secrets for sideBar iOS/macOS builds
//
// 1) Copy this file to `SideBar.local.xcconfig` (not committed)
// 2) In Xcode: sideBar target → Build Settings → "Base Configuration"
//    - Debug: set to `Config/SideBar.xcconfig` (which includes the local file)
//    - (Optional) Release: set to `Config/SideBar.xcconfig`

// Note: escape // in URLs so .xcconfig doesn't treat it as a comment.
API_BASE_URL = http:\/\/127.0.0.1:8001\/api\/v1

SUPABASE_URL = https:\/\/YOUR_PROJECT.supabase.co
SUPABASE_ANON_KEY = YOUR_SUPABASE_ANON_KEY
R2_ENDPOINT = https:\/\/<account-id>.r2.cloudflarestorage.com
R2_BUCKET = your_r2_bucket
R2_FAVICON_BUCKET = your_favicon_bucket
R2_FAVICON_PUBLIC_BASE_URL = https:\/\/favicons.yourdomain.com

APP_GROUP_ID = group.ai.sidebar.sidebar
KEYCHAIN_ACCESS_GROUP = $(AppIdentifierPrefix)ai.sidebar.sidebar
KEYCHAIN_SERVICE = ai.sidebar.sidebar

INFOPLIST_KEY_API_BASE_URL = $(API_BASE_URL)
INFOPLIST_KEY_SUPABASE_URL = $(SUPABASE_URL)
INFOPLIST_KEY_SUPABASE_ANON_KEY = $(SUPABASE_ANON_KEY)
INFOPLIST_KEY_R2_ENDPOINT = $(R2_ENDPOINT)
INFOPLIST_KEY_R2_BUCKET = $(R2_BUCKET)
INFOPLIST_KEY_R2_FAVICON_BUCKET = $(R2_FAVICON_BUCKET)
INFOPLIST_KEY_R2_FAVICON_PUBLIC_BASE_URL = $(R2_FAVICON_PUBLIC_BASE_URL)
INFOPLIST_KEY_APP_GROUP_ID = $(APP_GROUP_ID)
INFOPLIST_KEY_KEYCHAIN_ACCESS_GROUP = $(KEYCHAIN_ACCESS_GROUP)
INFOPLIST_KEY_KEYCHAIN_SERVICE = $(KEYCHAIN_SERVICE)
INFOPLIST_KEY_BGTaskSchedulerPermittedIdentifiers = $(inherited) ai.sidebar.sidebar.tokenrefresh ai.sidebar.sidebar.widgetrefresh
